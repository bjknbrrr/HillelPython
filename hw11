#1 треугольник

rows = int(input('Please, enter a number: '))
cols = rows * 2 - 1
for i in range(rows):
    for j in range(cols):
        if (j == (cols - 1)//2 - i
            or j == (cols - 1)//2 + i
            or i == rows-1
    ):
            print('* ', end='')
        else:
            print('  ', end='')
    print()
    

