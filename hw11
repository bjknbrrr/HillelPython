    #4 ромб
    
rows = int(input('Please, enter a number: '))
cols = rows
for i in range(rows):
    for j in range(cols):
        if (i == rows //2
            or j == (cols - 1) // 2 - i
            or j == (cols - 1) // 2 + i
            or i == (rows - 1) // 2 + j
            or j == (cols - 1) // 2 - i + rows-1

    ):
            print('* ', end='')
        else:
            print('  ', end='')
    print()
    
    
