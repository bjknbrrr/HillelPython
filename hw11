#4 ромб + вертикаль
    
rows = int(input('Please enter height: '))  # 5
cols = rows * 2 - 1
i = 0
while i < rows:
    j = 0
    while j < rows * 2:
        if rows - 1 - i <= j <= rows - 1 + i:
            print('* ', end='')
        else:
            print('  ', end='')
        j += 1
    print()
    i += 1
for i in range(rows-1):
    for j in range(cols-1):
        if (i == j - 1
            or j == cols -2 - i
            or j == (cols - 1) // 2
    ):
            print('* ', end='')
        else:
            print('  ', end='')

    print()
print()
