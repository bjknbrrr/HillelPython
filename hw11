#1 треугольник

rows = int(input('Please, enter a number: '))
cols = rows * 2 - 1
for i in range(rows):
    for j in range(cols):
        if (j == (cols - 1)//2 - i
            or j == (cols - 1)//2 + i
            or i == rows-1
    ):
            print('* ', end='')
        else:
            print('  ', end='')
    print()
    

                *                 
              *   *               
            *       *             
          *           *           
        *               *         
      *                   *       
    *                       *     
  *                           *   
* * * * * * * * * * * * * * * * * 
-----------------------------------------------------------------------------------------

#2 закрашеный треугольник

h = int(input('Please enter height: '))  # 5
i = 0
while i < h:
    j = 0
    while j < h * 2:
        if h - 1 - i <= j <= h - 1 + i:
            print('* ', end='')
        else:
            print('  ', end='')
        j += 1
    print()
    i += 1
print()

                *                   
              * * *                 
            * * * * *               
          * * * * * * *             
        * * * * * * * * *           
      * * * * * * * * * * *         
    * * * * * * * * * * * * *       
  * * * * * * * * * * * * * * *     
* * * * * * * * * * * * * * * * *   
-------------------------------------------------------------------------------------------

#3 ромб
    
rows = int(input('Please enter height: '))  # 5
cols = rows * 2 - 1
i = 0
while i < rows:
    j = 0
    while j < rows * 2:
        if rows - 1 - i <= j <= rows - 1 + i:
            print('* ', end='')
        else:
            print('  ', end='')
        j += 1
    print()
    i += 1
for i in range(rows-1):
    for j in range(cols-1):
        if (i == j - 1
            or j == cols -2 - i
    ):
            print('* ', end='')
        else:
            print('  ', end='')

    print()
print()
    
                *                   
              * * *                 
            * * * * *               
          * * * * * * *             
